{
    "compilerOptions": {
      "target": "es2019",
      "lib": ["es2019"],
      "module": "ESNext",
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "rootDir": ".",
      "allowJs": false,
      "outDir": ".types",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "emitDeclarationOnly": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "noUnusedLocals": false,
      "noLib": false,
      "types": ["node"]
    },
    "include": ["src", "*.config.ts"]
}